{
	"manifest_version": 2,
	"name": "Summarization Extension",
	"version": "0.1",
	"permissions": [
		"tabs",
		"activeTab",
		"storage"
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js" : ["content.js"]
		}
	],
	"browser_action": {
		"default_icon": "elleconlogo.png",
		"default_popup": "mainpage/mainpage.html",
		"default_title": "Summarize This Article!"
	}
}
